@model List<DisplayBookingResponse>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Misafir</th>
                <th>Giriş Tarihi</th>
                <th>Çıkış Tarigi</th>
                <th>Durum</th>
                <th>Onayla</th>
                <th>İptal Et</th>
                <th>Beklet</th>
                <th>Güncelle</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.FullName</td>
                    <td>@item.CheckIn.ToShortDateString()</td>
                    <td>@item.CheckOut.ToShortDateString()</td>
                    <td> <span class="badge badge-primary px-2">@item.Status</span> </td>
                    <td><a href="/AdminBooking/ApproveReservation/@item.BookingId" class="btn btn-primary">Onayla</a></td>
                    <td><a href="/AdminBooking/CancelReservation/@item.BookingId" class="btn btn-danger">İptal Et</a></td>
                    <td><a href="/AdminBooking/WaitReservation/@item.BookingId" class="btn btn-warning">Beklet</a></td>
                    <td><a href="/AdminBooking/UpdateBooking/@item.BookingId" class="btn btn-info">Güncelle</a></td>
                    <td><a href="/AdminBooking/UpdateBooking/@item.BookingId" class="btn btn-dark">Detaylar</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>


