@model UpdateGuestRequest
@{
    ViewData["Title"] = "UpdateGuest";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="GuestId" />
    <label>Misafir Adı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span class="text-danger" asp-validation-for="Name"></span>
    <br />
    <label>Misafir Soyadı</label>
    <input type="text" asp-for="Surname" class="form-control" />
    <span class="text-danger" asp-validation-for="Surname"></span>
    <br />
    <label>Misafir Şehir</label>
    <input type="text" asp-for="City" class="form-control" />
    <span class="text-danger" asp-validation-for="City"></span>
    <br />
    <button class="btn mb-1 btn-rounded btn-outline-primary">Misafiri Güncelle</button>
</form>

